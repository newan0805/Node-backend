{{#if removedUserMsg}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
        User has been removed!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row mb-3">
    <div class="col-6">
        <h1>Users</h1>
    </div>
    <div class="col-6 d-flex justify-content-between">
        <a href="/adduser" type="button" class="btn btn-primary align-self-center">
            + Add User
        </a>
        <a href="/uploadpicture/" type="button" class="btn btn-success align-self-center">
            + Upload Image
        </a>
    </div>
</div>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col" class="d-flex justify-content-center">Action</th>
        </tr>
    </thead>
    <tbody>

        {{#each result}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phone}}</td>
            <td class="d-flex justify-content-center">
                <a href="/viewuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-eye"></i>&nbsp;View</a>
                <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-pencil"></i>&nbsp;Edit</a>
                <a href="/deleteuser/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                        class="bi bi-person-x"></i>&nbsp;Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>